<div class="loginPage">
  <h1>Sign In</h1>

<p>
  <%= flash[:error_message] %>
</p>
<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %><br>

  <%= submit_tag "Sign In" %>
  <p>or <%= link_to "Sign Up", new_user_path %></p>

<% end %>
</div>
