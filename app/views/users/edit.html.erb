<div class="loginPage">
  <h1>Edit User</h1>

  <%= form_for @user, :html => {:multipart => true} do |f| %>
  <%= f.label :email, :autofocus => true, :required => true %>
  <%= f.email_field :email %>

  <%= f.label :username, :required => true %>
  <%= f.text_field :username %>

  <%= f.label :profile_image, :required => true %>
  <%= f.cl_image_upload :profile_image %>

  <% if @user.admin == true %>
    <%= f.label :coins, :required => true %>
    <%= f.number_field :coins %>
  <% end %>

  <%= f.submit %>
  <% end %>
</div>
