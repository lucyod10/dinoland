<!DOCTYPE html>
<html>
  <head>
    <title>Dinoland</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to "Home", root_path %>



      <% if @current_user.present? %>
        <ul>
          <li><%= link_to "Characters", characters_path %></li>
          <li><%= link_to "Your Characters", session_characters_path %></li>
          <li><%= link_to "New Character", new_character_path %></li>
        </ul>
        <p>Username: <%= @current_user.username %> <br>
        <%= link_to "logout", login_path, :method => 'delete' %>
        </p>

      <% else %>
        <%= link_to "Sign up", new_user_path %>
        <%= link_to "sign in", login_path %>
      <% end %>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
